                        <div class="card-body">
                            <h5 class="card-title"><%=i.title%></h5>
                            <p class="card-text" style="height: 20px; overflow: hidden;"><%=i.description%></p>
                            <a href="show_job_details/?id=<%=i.jobid%>" class="btn btn-primary">Apply job</a>
                        </div>
                    </div>
                </div>
                
                
                
